
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/Customer.css" rel="stylesheet">
<h2 style="text-align:center">XÓA KHÁCH HÀNG</h2>

<div style="text-align: center; font-size: 25px; width: 50%; margin: 0px auto; border: solid 1px black; background-color: whitesmoke">ID: @Model.id</div>
<hr />
<div style="text-align: center; font-size: 25px; width: 50%; margin: 0px auto; border: solid 1px black; background-color: whitesmoke">
    Tên khách hàng:
    @Model.ten
</div>
<hr />
<div style="text-align: center; font-size: 25px; width: 50%; margin: 0px auto; border: solid 1px black; background-color: whitesmoke">
    Số điện thoại:
    @Model.sdt
</div>
<hr />
<div style="text-align: center; font-size: 25px; width: 50%; margin: 0px auto; border: solid 1px black; background-color: whitesmoke">
    Ngày sinh:
    @Model.ngay_sinh.ToString("dd/MM/yyyy")
</div>

@using (Html.BeginForm())
{
    <p style="text-align:center;margin-top:50px">
        <input type="submit" value="XÁC NHẬN XÓA" /> 
       <div class="fix_btn" style="text-align:center">@Html.ActionLink("Trở về", "Index")</div>
    </p>
}

