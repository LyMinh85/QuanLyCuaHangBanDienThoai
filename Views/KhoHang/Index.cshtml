
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<header class="header d-flex justify-content-around align-items-center">
    <div class="search-bar " style="z-index: 0; background: none; position: inherit; visibility: visible; opacity: 1; box-shadow: none">
        <form class="search-form d-flex align-items-center" method="POST" @Url.Action("Index", "KhoHang")>
            <input type="text" name="strSearch" placeholder="Tìm kiếm" title="Enter search keyword" value="@ViewBag.StrSearch">
            <button type="submit" title="Search">
                <i class="bi bi-search"></i>
            </button>
        </form>
    </div><!-- End Search Bar -->
    <div class="btn-group">
        <button class="btn btn-primary " onclick="location.href= ' @Url.Action("Create", "KhoHang") ' " >  
            <div class="text-white">Thêm mới</div>
        </button>
    </div>


</header>

<table class="table">
    <tr>
        <th>
            ID
        </th>
        <th>
            Tên kho
        </th>
        <th>
            Địa Chỉ
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>

                <!-- Hiển thị ID của đối tượng với -->
                @item.id
            </td>
            <td>
                @item.ten
            </td>
            <td>
                @item.dia_chi
            </td>
            <td>
                <!-- Thẻ Html.ActionLink dùng để link đến 1 trang khác
                ( Tên Link hiển thị / Thư mục ) than số chuyền ra là ( id = id.Item)-->
                @Html.ActionLink("Sửa", "Edit", new { id = item.id }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.id })
            </td>
        </tr>
    }
</table>

